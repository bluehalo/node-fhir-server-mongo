<% const hasResource = typeof(resourceDefinition) !== 'undefined' %>

<form
    class="search-form px-3"
    action="/4_0_0/<%= hasResource ? resourceDefinition.name : '' %>/_search"
    id="searchForm"
    method="post"
>
    <button
        type="button"
        id="advSearchButton"
        class="btn btn-light fa fa-ellipsis-v"
        title="Advanced Search"
        data-bs-toggle="modal"
        data-bs-target="#advSearchModal"
    ></button>
    <h5 class="mt-3">
        <%= hasResource ? resourceDefinition.name : '' %>
        <a
            href="<%= hasResource ? resourceDefinition.url : '' %>"
            target="_blank"
            title="<%= hasResource ? resourceDefinition.description : '' %>"
            class="fa fa-external-link resource-link"
        ></a>
    </h5>
    <div class="form-group">
        <label for="last"><small>Last Updated</small></label>
        <div class="input-group mb-3" id="_lastUpdateRange">
            <input
                type="text"
                class="form-control"
                name="_lastUpdated:above"
                placeholder="YYYY-MM-DD"
                aria-label="Start Date"
                value="<%= lastUpdateStart %>"
                autocomplete="off"
            />
            <span class="input-group-text">to</span>
            <input
                type="text"
                class="form-control"
                name="_lastUpdated:below"
                placeholder="YYYY-MM-DD"
                aria-label="End Date"
                value="<%= lastUpdateEnd %>"
                autocomplete="off"
            />
        </div>
    </div>
    <% for (var i = 0; i < formData.length; i++) { %>
    <div class="form-group form-group-clear">
        <label for="<%= formData[i].name %>" class="visually-hidden"
            ><%= formData[i].label %></label
        >
        <input
            id="<%= formData[i].name %>"
            type="text"
            class="form-control clear-allowed"
            name="<%= formData[i].name %>:contains"
            value="<%= formData[i].value %>"
            placeholder="<%= formData[i].label %>"
            autocomplete="off"
            title="<%= formData[i].label %>"
        />
        <span
            class="fa fa-times clear-input <%= formData[i].value !== '' ? 'showInputClearLink' : '' %>"
        ></span>
    </div>
    <!-- prettier-ignore -->
    <% } %>
    <% for (var i = 0; i < advSearchFormData.length; i++) { %>
    <input
        type="hidden"
        name="<%= advSearchFormData[i].name %>:contains"
        value="<%= advSearchFormData[i].value %>"
    />
    <% } %>
    <input type="hidden" name="identifier" />

    <div class="form-group">
        <button type="button" id="resetFormButton" class="btn btn-light mb-3">Reset</button>
        <button type="submit" class="btn btn-primary mb-3">
            <i class="fa fa-search"></i>
            Search
        </button>
    </div>
    <input
        type="hidden"
        class="search-pagination"
        name="_getpagesoffset"
        value="<%= pageIndex %>"
    />
    <input type="hidden" class="search-pagination" name="_count" value="10" />
    <input type="hidden" class="search-pagination" name="_total" value="accurate" />
</form>

<div class="modal fade" id="advSearchModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h5 class="modal-title">
                    Advanced Search - <%= hasResource ? resourceDefinition.name : '' %>
                </h5>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <form id="advSearchForm">
                    <% for (var i = 0; i < advSearchFormData.length; i++) { %>
                    <div class="row mb-2">
                        <label
                            for="<%= advSearchFormData[i].name %>"
                            class="col-sm col-form-label col-form-label-sm text-nowrap"
                            ><%= advSearchFormData[i].label %></label
                        >
                        <div class="col-auto flex-grow-1 form-group-clear">
                            <input
                                type="text"
                                id="<%= advSearchFormData[i].name %>"
                                name="<%= advSearchFormData[i].name %>"
                                value="<%= advSearchFormData[i].value %>"
                                class="form-control form-control-sm clear-allowed"
                                autocomplete="nope"
                            />
                            <span
                                class="fa fa-times clear-input <%= advSearchFormData[i].value !== '' ? 'showInputClearLink' : '' %>"
                            ></span>
                        </div>
                    </div>
                    <% } %>
                    <input type="submit" class="position-absolute invisible" />
                </form>
            </div>
            <div class="modal-footer py-1">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-primary" id="advSearchModalButton">
                    <i class="fa fa-search"></i> Search
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/datepicker-full.min.js"></script>
<script type="text/javascript" src="/js/search.js"></script>
