<%- include('../partials/nav'); %>
<div class="d-flex px-3 border-bottom">
  <% if (locals.resourceDefinition) {%>
  <h3 class="flex-grow-1">
    <%= resourceDefinition.name %><a
      href="<%= resourceDefinition.url %>"
      target="_blank"
      title="<%= resourceDefinition.description %>"
      class="fa fa-external-link resource-link"
    ></a>
  </h3>
  <% if (resources.length > 0) { %>
  <div class="dropdown dropdown-hover">
    <button
      type="button"
      class="btn btn-link dropdown-toggle text-dark text-decoration-none"
      id="dropdownMenuLink"
      data-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
    >
      <!-- prettier-ignore -->
      <% if (total > 0) { %>
        Resources (<%= resources.length %> out of <%= total %> total)
      <% } else { %>
        Resources (<%= resources.length %>)
      <%}%>
    </button>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
      <% resources.forEach(function(res){ %>
      <a href="#<%= res.id %>" class="dropdown-item"><%= res.id %></a>
      <%})%>
    </div>
  </div>
  <%}%> <%}%>
</div>
